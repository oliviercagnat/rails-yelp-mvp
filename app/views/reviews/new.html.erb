<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h1>Add review for <%= @restaurant.name %></h1>
      <%= simple_form_for([@restaurant, @review]) do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: 0..5 %>
        <%= f.submit "Submit review", class: "btn btn-primary"%>
        <%= link_to 'Back', @restaurant %>
      <% end %>
    </div>
  </div>
</div>
