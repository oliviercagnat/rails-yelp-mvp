<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h1 class="display-4"><%= @restaurant.name %></h1>
    <p class="lead"><%= @restaurant.category %></p>
  <hr class="my-4">
    <p>Address: <%= @restaurant.address %></p>
    <p>Phone number: <%= @restaurant.phone_number %></p>
  <hr class="my-4">
  <h4 class="display-6">Reviews</h4>
    <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item">
      <%= review.rating %>/5
      <%= review.content %>
      </li>
    <% end %>
    </ul>
  <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %> |
  <%= link_to 'Back to menu', restaurants_path %>
</div>
